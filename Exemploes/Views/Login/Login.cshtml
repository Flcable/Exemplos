
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        @Html.TextBox("usuario", ViewBag.usuario as string, new { @class = "form-control"})
    </p>

    <p>
        @Html.Password("senha", ViewBag.senha as string, new { @class = "form-control"})
    </p>

    <p>
        <input id="entrar" name="entrar" type="submit" value="entrar" class="btn-success"/>
        <input id="sair" name="sair" type="submit" value="sair" class="btn-danger"/>
    </p>

    <p class="alert-info">
        @ViewBag.mensagem
    </p>
}
